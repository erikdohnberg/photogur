<h1>Edit a picture</h1>
<form action="/pictures/<%= @picture.id %>" method="POST">

	<label>Artist</label>
	<p><input type="text" name="artist" value="<%= @picture.artist %>"></p>
	
	<label>Title</label>
	<p><input type="text" name="title" value="<%= @picture.title %>"></p>

	<label>Image URL</label>
	<p><input type="text" name="url" value="<%= @picture.url %>"></p>

	<p><input type="submit" value="Destroy!"/></p>

</form>